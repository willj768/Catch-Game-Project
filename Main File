class Apple {
  constructor(x, y, size, speed, acceleration) {
    this.x = x;
    this.y = y;
    this.size = size;
    this.speed = speed;
    this.acceleration = acceleration;
  }
  
  move() {
    while(this.x < 800) {
      this.speed += this.acceleration;
      this.y += this.speed;
    }
  }
  
  display() {
    circle(this.x, this.y, this.size);
  }
}

let apple;

function setup() {
  createCanvas(800, 800);
  
  apple = new Apple(100, 100, 10, 0, 0.05);
}

function draw() {
  background(0);
  apple.display();
  apple.move();
}
